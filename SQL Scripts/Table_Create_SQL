CREATE TABLE CLASS
(
 ID INT IDENTITY(1,1) PRIMARY KEY,
 NAME VARCHAR(10) NOT NULL,
 HIT_DIE VARCHAR(5) NOT NULL,
 PROFICIENCIES VARCHAR(1000) NOT NULL,
 LVL_BONUS VARCHAR(1000) NOT NULL,
 BASE_SEPLLS_PER_DAY VARCHAR(1000),
 SPELL_PER_LVL VARCHAR(1000)
)

CREATE TABLE RACE
(
 ID INT IDENTITY(1,1) PRIMARY KEY,
 NAME VARCHAR(15) NOT NULL,
 RACE_SIZE VARCHAR(6) NOT NULL,
 RACE_SPEED VARCHAR(7) NOT NULL,
 FEATS VARCHAR(1000) NOT NULL,
 ABILITY_SCORE_1 VARCHAR(15) NOT NULL,
 ABILITY_SCORE_2 VARCHAR(15),
 ABILITY_SCORE_INCREASE_1 VARCHAR(2) NOT NULL,
 ABILITY_SCORE_INCREASE_2 VARCHAR(2)
)

CREATE TABLE ABILITY_SCORE
(
 ID INT IDENTITY(1,1) PRIMARY KEY,
 STRENGTH VARCHAR(2) NOT NULL,
 CONSITUTION VARCHAR(2) NOT NULL,
 DEXTERITY VARCHAR(2) NOT NULL,
 INTELLIGENCE VARCHAR(2) NOT NULL,
 WISDOM VARCHAR(2) NOT NULL,
 CHARISMA VARCHAR(2) NOT NULL
)

CREATE TABLE SPELL
(
 ID INT IDENTITY(1,1) PRIMARY KEY,
 NAME VARCHAR(15) NOT NULL,
 CAST_TIME VARCHAR(255),
 SPELL_RANGE INT,
 COMPONENTS VARCHAR(50),
 DURATION INT,
 SPELL_DESC VARCHAR(255),
 SPELL_SCHOOL VARCHAR(50),
 SPELL_LVL INT NOT NULL,
 COMPONENT_LIST VARCHAR(255)
)

CREATE TABLE ITEM
(
 ID INT IDENTITY(1,1) PRIMARY KEY,
 COST INT,
 NAME VARCHAR(25) NOT NULL,
 ITEM_DESC VARCHAR(255),
 ITEM_GROUP VARCHAR(50),
 DAMAGE_DIE_ROLL VARCHAR(3),
 DAMAGE_ROLL_NUM VARCHAR(2),
 DAMAGE_TYPE VARCHAR(50),
 DAMAGE_AMMO VARCHAR(50),
 ARMOR_CLASS VARCHAR(25),
 ARMOR_CLASS_MODIFIER VARCHAR(5),
 STEALTH VARCHAR(10),
 ITEM_RANGE VARCHAR(10),
 ITEM_WEIGHT VARCHAR(10),
 ITEM_PROPERTIES VARCHAR(255)
)

CREATE TABLE SPELL_BOOK
(
 ID INT IDENTITY(1,1) PRIMARY KEY,
 SPELL_ID INT NOT NULL,
 FOREIGN KEY (SPELL_ID) REFERENCES SPELL(ID)
)

CREATE TABLE INVENTORY
(
 ID INT IDENTITY(1,1) PRIMARY KEY,
 ITEM_ID INT NOT NULL,
 FOREIGN KEY (ITEM_ID) REFERENCES ITEM(ID)
)

CREATE TABLE CHARACTER
(
 ID INT IDENTITY(1,1) PRIMARY KEY,
 RACE_ID INT NOT NULL,
 CLASS_ID INT NOT NULL,
 INVENTORY_ID INT NOT NULL,
 SPELL_BOOK_ID INT,
 ABILITY_SCORE_ID INT NOT NULL,
 CHAR_NAME VARCHAR(255) NOT NULL,
 PLAYER_NAME VARCHAR(50) NOT NULL,
 CHAR_LVL INT NOT NULL,
 FOREIGN KEY (RACE_ID) REFERENCES RACE(ID),
 FOREIGN KEY (CLASS_ID) REFERENCES CLASS(ID),
 FOREIGN KEY (INVENTORY_ID) REFERENCES INVENTORY(ID),
 FOREIGN KEY (SPELL_BOOK_ID) REFERENCES SPELL_BOOK(ID),
 FOREIGN KEY (ABILITY_SCORE_ID) REFERENCES ABILITY_SCORE(ID)
)